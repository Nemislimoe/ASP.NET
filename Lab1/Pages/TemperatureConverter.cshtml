@page
@model Lab1.Pages.TemperatureConverterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Temperature Converter</title>
</head>
<body>
    <h1>Конвертер температури</h1>

    <form method="post">
        <label for="celsius">Градуси Цельсія:</label>
        <input type="number" step="any" id="celsius" name="Celsius" value="@(Model.Celsius?.ToString() ?? "")" />
        <button type="submit">Перевести</button>
    </form>

    @if (Model.Fahrenheit.HasValue)
    {
        <p><strong>@Model.Celsius.Value</strong>°C = <strong>@Model.Fahrenheit.Value.ToString("0.##")</strong>°F</p>
    }
</body>
</html>

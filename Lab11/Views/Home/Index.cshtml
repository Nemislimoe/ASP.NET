@{
    ViewData["Title"] = "Home";
    var id = ViewData["Id"] as int?;
}

<h1>Home Index</h1>

<p><strong>Параметр id:</strong> @(id.HasValue ? id.Value.ToString() : "null")</p>

<div style="margin-top:20px;">
    <h2>Посилання на каталог books</h2>
    <a class="btn btn-primary"
       href="@Url.RouteUrl("catalog", new { category = "books", page = 1, sort = "name" })">
        Переглянути books, page 1, sort=name
    </a>
</div>

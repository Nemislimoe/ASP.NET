@{
    ViewData["Title"] = "Category";
    var category = (string)ViewContext.RouteData.Values["category"] ?? "";
    var page = ViewContext.RouteData.Values["page"]?.ToString();
    var sort = Context.Request.Query["sort"].ToString();
}

<h1>Products Category</h1>
<p><strong>Category:</strong> @category</p>
<p><strong>Page:</strong> @(string.IsNullOrEmpty(page) ? "null" : page)</p>
<p><strong>Sort:</strong> @(string.IsNullOrEmpty(sort) ? "null" : sort)</p>

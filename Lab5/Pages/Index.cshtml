@page
@model IndexModel
@{
    ViewData["Title"] = "Lab5 Demo";
    Layout = "_Layout";
}
<section id="flex" class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-4xl">
        <h2 class="text-2xl font-semibold mb-6">Завдання 1 — Flexbox кнопки</h2>
        @await Html.PartialAsync("_Buttons")
    </div>
</section>

<hr class="my-12" />

<section id="grid" class="px-4">
    <h2 class="text-2xl font-semibold mb-6">Завдання 2 — Grid картки</h2>
    @await Html.PartialAsync("_Cards")
</section>

<hr class="my-12" />

<section id="form" class="px-4">
    <h2 class="text-2xl font-semibold mb-6">Завдання 3 — Форма логіну</h2>
    @await Html.PartialAsync("_LoginForm")
</section>

<hr class="my-12" />

<section id="anim" class="px-4">
    <h2 class="text-2xl font-semibold mb-6">Завдання 4 — Трансформації</h2>
    @await Html.PartialAsync("_Animations")
</section>

<hr class="my-12" />

<section id="landing" class="px-4 pb-16">
    <h2 class="text-2xl font-semibold mb-6">Завдання 5 — Landing</h2>
    @await Html.PartialAsync("_Landing")
</section>


<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>@ViewData["Title"] - Lab5</title>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          rotate: { '5': '5deg' }
        }
      }
    }
  </script>
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    .smooth-transform { transition: transform 300ms, box-shadow 300ms, background-color 300ms; }
  </style>
</head>
<body class="bg-gray-50 text-gray-800">
  <div class="min-h-screen flex flex-col">
    <header class="bg-white shadow">
      <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a class="text-xl font-bold" href="/">Lab5 ASP.NET</a>
        <nav class="space-x-4">
          <a class="text-gray-600 hover:text-gray-900" href="#flex">Flex</a>
          <a class="text-gray-600 hover:text-gray-900" href="#grid">Grid</a>
          <a class="text-gray-600 hover:text-gray-900" href="#form">Form</a>
          <a class="text-gray-600 hover:text-gray-900" href="#anim">Anim</a>
          <a class="text-gray-600 hover:text-gray-900" href="#landing">Landing</a>
        </nav>
      </div>
    </header>

    <main class="flex-1">
      <div class="max-w-6xl mx-auto px-4 py-8">
        @RenderBody()
      </div>
    </main>

    <footer class="bg-white border-t">
      <div class="max-w-6xl mx-auto px-4 py-6 text-sm text-gray-600">
        © @DateTime.Now.Year Lab5
      </div>
    </footer>
  </div>
  @RenderSection("Scripts", required: false)
</body>
</html>

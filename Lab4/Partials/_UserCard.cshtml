@model Lab4.Models.User

<div class="card">
    <div class="card-body d-flex align-items-center">
        <img src="@Model.AvatarUrl" alt="avatar" class="rounded-circle me-3" style="width:60px;height:60px;object-fit:cover;" />
        <div>
            <div class="fw-semibold">@Model.Name</div>
            <div class="text-muted small">@Model.Email</div>
        </div>
    </div>
</div>

@using Lab4.Models
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Lab4</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    @RenderSection("HeadExtra", required: false)
</head>
<body>
    <header class="bg-light border-bottom mb-3">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <div>
                <a class="navbar-brand" href="/">Lab4</a>
            </div>
            <div>
                @await Html.PartialAsync("~/Partials/_Nav.cshtml")
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <main class="col-md-9">
                @await Html.PartialAsync("~/Partials/_Notification.cshtml", HttpContextAccessor.HttpContext?.Items["Notifications"] as List<NotificationMessage>)
                @RenderBody()
            </main>
            <aside class="col-md-3">
                @RenderSection("Sidebar", required: false)
            </aside>
        </div>
    </div>

    <footer class="bg-light border-top mt-4 py-3">
        <div class="container text-center small">© Lab4</div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

@page
@model Lab4.Pages.Users.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

@section Sidebar {
    @await Html.PartialAsync("~/Partials/_UserCard.cshtml", Model.CurrentUser)
}

<h2>Profile of @Model.CurrentUser.Name</h2>
<div>
    <img id="avatar" src="@Model.CurrentUser.AvatarUrl" style="width:150px;height:150px;border-radius:8px;object-fit:cover;" alt="avatar" />
</div>

@section Scripts {
    <script>
        document.getElementById('avatar')?.addEventListener('click', function(){
            alert('This would open avatar editor in real app.');
        });
    </script>
}

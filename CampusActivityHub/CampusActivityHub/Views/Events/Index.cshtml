@model IEnumerable<CampusActivityHub.Models.Event>
@{
    ViewData["Title"] = "Події";
    Layout = "_Layout";
}
<h2>Події</h2>

<form class="mb-3" method="get" asp-action="Index">
    <div class="input-group">
        <input class="form-control" name="q" placeholder="Пошук..." />
        <button class="btn btn-outline-secondary">Пошук</button>
    </div>
</form>

<div id="events-list">
    @await Html.PartialAsync("_EventListPartial", Model)
</div>

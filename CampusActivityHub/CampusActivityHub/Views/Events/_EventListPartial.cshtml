@model IEnumerable<CampusActivityHub.Models.Event>
<div class="row">
    @foreach (var e in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(e.PosterPath))
                {
                    <img src="@e.PosterPath" class="card-img-top" style="height:180px;object-fit:cover" />
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@e.Title</h5>
                    <p class="card-text">@e.Category?.Name — @e.StartAt.ToLocalTime().ToString("g")</p>
                    <div class="mt-auto">
                        <a class="btn btn-sm btn-primary" asp-controller="Events" asp-action="Details" asp-route-id="@e.Id">Деталі</a>
                        @if (User.IsInRole("Student"))
                        {
                            <button class="btn btn-sm btn-success" onclick="registerEvent(@e.Id)">Реєстрація</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@model CampusActivityHub.Models.Event
@{
    ViewData["Title"] = Model.Title;
}
<div class="row">
    <div class="col-md-8">
        <h2>@Model.Title</h2>
        <p><strong>Категорія:</strong> @Model.Category?.Name</p>
        <p><strong>Дата:</strong> @Model.StartAt.ToLocalTime().ToString("f")</p>
        <p><strong>Місць:</strong> @Model.Capacity</p>
        <p><strong>Організатор:</strong> @Model.Organizer?.Name</p>
        <p>
            @if (User.IsInRole("Student"))
            {
                <button class="btn btn-primary" onclick="registerEvent(@Model.Id)">Зареєструватися</button>
            }
        </p>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.PosterPath))
        {
            <img src="@Model.PosterPath" class="img-fluid" />
        }
    </div>
</div>

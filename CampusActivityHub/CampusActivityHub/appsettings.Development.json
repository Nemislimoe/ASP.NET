{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=campus_dev.db"
  },
  "Smtp": {
    "Host": "smtp.mailtrap.io",
    "Port": "587",
    "User": "your_mailtrap_user",
    "Pass": "your_mailtrap_pass",
    "From": "no-reply@campus.local"
  },
  "FileStorage": {
    "PostersPath": "wwwroot/uploads/posters",
    "MaxPosterSizeBytes": 5242880
  },
  "SeedData": {
    "EnsureSeed": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}

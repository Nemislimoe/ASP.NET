@page "{id:int}"
@model Lab6.Pages.Books.EditModel
<h2>Edit Book</h2>
<form method="post">
    <input type="hidden" asp-for="Book.Id" />
    <div>
        <label>Title</label>
        <input asp-for="Book.Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Book.Author" />
    </div>
    <div>
        <label>Year</label>
        <input asp-for="Book.Year" type="number" />
    </div>
    <button type="submit">Save</button>
</form>
<p><a asp-page="Index">Back to list</a></p>

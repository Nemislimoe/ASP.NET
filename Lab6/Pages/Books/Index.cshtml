@page
@model Lab6.Pages.Books.IndexModel
<h2>Books</h2>
<p><a asp-page="Create">Add new book</a></p>
<table>
    <thead>
        <tr><th>Title</th><th>Author</th><th>Year</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Books)
        {
            <tr>
                <td>@b.Title</td>
                <td>@b.Author</td>
                <td>@b.Year</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@b.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@b.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

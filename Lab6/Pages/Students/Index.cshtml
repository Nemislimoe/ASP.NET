@page
@model Lab6.Pages.Students.IndexModel
<h2>Students</h2>
<p><a asp-page="Create">Add new student</a></p>
<table>
    <thead>
        <tr><th>First Name</th><th>Last Name</th><th>Age</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Students)
        {
            <tr>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>@s.Age</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@s.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

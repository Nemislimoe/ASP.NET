@page
@model Lab6.Pages.Products.IndexModel
<h2>Products</h2>
<p><a asp-page="Create">Add new product</a></p>
<table>
    <thead>
        <tr><th>Name</th><th>Price</th><th>Quantity</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.Name</td>
                <td>@string.Format("{0:0.00}", p.Price)</td>
                <td>@p.Quantity</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@p.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@page
@model OnlineShop.Pages.Cart.IndexModel

<h2>Корзина</h2>

@if (!Model.Items.Any())
{
    <p>Корзина порожня. <a asp-page="/Products/Index">Повернутися до товарів</a></p>
}
else
{
    <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Товар</th>
                    <th>Ціна</th>
                    <th>Кількість</th>
                    <th>Сума</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <form method="post" class="d-inline">
                                <input type="number" name="quantity" value="@item.Quantity" min="0" class="form-control d-inline" style="width:80px" />
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button formaction="?handler=Update" class="btn btn-sm btn-primary mt-1">Оновити</button>
                            </form>
                        </td>
                        <td>@(item.Price * item.Quantity).ToString("C")</td>
                        <td>
                            <form method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button formaction="?handler=Remove" class="btn btn-sm btn-danger">Видалити</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>

    <p><strong>Загалом: </strong>@Model.Items.Sum(i => i.Price * i.Quantity).ToString("C")</p>
    <a asp-page="/Checkout/Index" class="btn btn-success">Оформити замовлення</a>
}

@model CardViewModel

<article class="bg-white rounded-lg shadow-lg overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-2xl flex flex-col">
    <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-48 object-cover" />
    <div class="p-4 flex-1 flex flex-col">
        <div class="mb-3">
            <h3 class="text-lg font-semibold text-gray-800">@Model.Title</h3>
            <p class="mt-1 text-sm text-gray-600">@Model.Description</p>
        </div>
        <div class="mt-auto flex items-center justify-between">
            <span class="text-xs text-gray-500">@Model.Category</span>
            <a href="@Model.DetailsUrl" class="inline-block px-4 py-2 bg-indigo-600 text-white text-sm rounded hover:bg-indigo-700 transition duration-300">
                Детальніше
            </a>
        </div>
    </div>
</article>

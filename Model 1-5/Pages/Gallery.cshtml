@page
@model GalleryModel
@{
    ViewData["Title"] = "Галерея карток";
    Layout = "_Layout";
}

<section>
    <h1 class="text-2xl font-bold mb-4">Галерея</h1>
    <p class="text-sm text-gray-600 mb-6">Колекція карток з описом і зображеннями.</p>

    <div class="grid gap-6
                grid-cols-1
                sm:grid-cols-2
                lg:grid-cols-3">
        @foreach (var card in Model.Cards)
        {
            <div>
                @await Html.PartialAsync("_Card", card)
            </div>
        }
    </div>
</section>

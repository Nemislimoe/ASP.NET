@page
@model Lab2.Pages.FeedbackModel

<h2>Feedback</h2>

<form method="post">
    <label for="comment">Коментар:</label><br />
    <textarea id="comment" name="Comment" rows="4" cols="50">@Model.Comment</textarea><br />
    <button type="submit">Відправити</button>
</form>

@if (ViewData["SavedComment"] != null)
{
    <h3>Ваш коментар:</h3>
    <p>@ViewData["SavedComment"]</p>
}
